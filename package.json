{
  "name": "reactexpress",
  "version": "1.0.0",
  "description": "Starter kit for creating React/Redux and Express apps",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node server.js",
    "server": "./node_modules/.bin/nodemon ./app.js --port 5000",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Brad Traversy & Gregory Assasie",
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^3.5.1",
    "express": "^4.16.2",
    "minimist": "^1.2.0",
    "mongoose": "^5.0.6",
    "mongoose-validators": "^0.1.0",
    "nodemon": "^1.14.7",
    "winston": "^2.4.0"
  }
}
